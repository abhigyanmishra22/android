<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/actlc"
        android:layout_width="222dp"
        android:layout_height="99dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="28dp"
        android:text="Activity LifeCycle"
        app:layout_constraintBottom_toTopOf="@+id/frglc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/frglc"
        android:layout_width="222dp"
        android:layout_height="99dp"
        android:layout_marginStart="94dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="205dp"
        android:text="Fragment LifeCycle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actlc" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="363dp"
        android:layout_height="100dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="89dp"
        android:text="Various Activity and Fragment LifeCycles"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/actlc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>